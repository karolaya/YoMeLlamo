<% provide(:songs_active, 'active')%>
<% if user_signed_in? %>
<div class="col-md text-center"'>
    <h1 class="text-center">Songs | <%= link_to 'Add', new_song_path, :class => "btn btn-success btn-lg" %></h1> 
</div>
<%end%>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Link</th>
      <th>Singer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.name %></td>
        <td><%= song.link %></td>
        <td><%= song.singer.singerName %></td>
        <td><%= link_to 'Show', song, :class => "btn btn-outline-success" %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_song_path(song), :class => "btn btn-outline-info" %></td>
          <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-outline-danger" %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>